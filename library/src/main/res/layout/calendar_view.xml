<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@id/mf_horizontal_calendar_month_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:textSize="18sp" />

        <ImageButton
            android:id="@id/mf_horizontal_calendar_prev_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/mf_horizontal_calendar_month_txt"
            android:layout_alignTop="@id/mf_horizontal_calendar_month_txt"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/mf_horizontal_calendar_month_txt"
            android:background="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@mipmap/left_ic" />

        <ImageButton
            android:id="@id/mf_horizontal_calendar_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/mf_horizontal_calendar_month_txt"
            android:layout_alignTop="@id/mf_horizontal_calendar_month_txt"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mf_horizontal_calendar_month_txt"
            android:background="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@mipmap/right_ic" />
    </RelativeLayout>

    <LinearLayout
        android:id="@id/mf_horizontal_calendar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@id/mf_horizontal_calendar_weekday_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center" />

        <TextView
            android:id="@id/mf_horizontal_calendar_weekday_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center" />

        <TextView
            android:id="@id/mf_horizontal_calendar_weekday_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center" />

        <TextView
            android:id="@id/mf_horizontal_calendar_weekday_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center" />

        <TextView
            android:id="@id/mf_horizontal_calendar_weekday_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center" />

        <TextView
            android:id="@id/mf_horizontal_calendar_weekday_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center" />

        <TextView
            android:id="@id/mf_horizontal_calendar_weekday_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <android.support.v4.view.ViewPager
        android:id="@id/mf_horizontal_calendar_month_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>